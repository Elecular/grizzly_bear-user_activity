{
    "name": "app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node --unhandled-rejections=strict ./bin/www",
        "start:dev": "nodemon --unhandled-rejections=strict ./bin/www",
        "test": "npm run test:mocha && npm run test:acceptance",
        "test:mocha": "mocha",
        "test:acceptance": "docker-compose up --build -d && wait-on --timeout 60000 http://localhost:80 && newman run test/acceptance_test.postman_collection.json && docker-compose stop"
    },
    "dependencies": {
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "morgan": "~1.9.1"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-plugin-mocha": "^6.3.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "mocha": "^7.1.0",
        "newman": "^4.6.0",
        "nodemon": "^2.0.2",
        "prettier": "1.19.1",
        "wait-on": "^4.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "./node_modules/.bin/eslint",
            "prettier --write",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    }
}
